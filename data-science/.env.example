# Database Configuration for ML Analytics Pipeline
# Copy this to .env and update with your actual values

# Enable database writes in pipeline (set to true to write to database)
CALCUTTA_WRITE_TO_DB=false

# Analytics Database Connection (matches backend configuration)
CALCUTTA_ANALYTICS_DB_HOST=localhost
CALCUTTA_ANALYTICS_DB_PORT=5432
CALCUTTA_ANALYTICS_DB_NAME=calcutta_analytics
CALCUTTA_ANALYTICS_DB_USER=postgres
CALCUTTA_ANALYTICS_DB_PASSWORD=postgres

# Connection Pool Settings
CALCUTTA_ANALYTICS_DB_MIN_CONN=1
CALCUTTA_ANALYTICS_DB_MAX_CONN=10

# For local development with Docker
# CALCUTTA_ANALYTICS_DB_HOST=host.docker.internal
